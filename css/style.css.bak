@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap');

*{
	margin: 0;
	padding: 0;
	box-sizing: border-box;
	font-family: 'Poppins', sans-serif;
}

header{
	background: url("../img/bg.jpg");
	padding: 20px 0;
}

.caixa{
	width: 940px;
	position: relative;
	margin: 0 auto;
}

nav{
	position: absolute;
	top: 100px;
	right: 0;
}

nav li{
	display: inline;
	margin: 0 0 0 15px;
}

nav a{
	text-transform: uppercase;
	color: #fff;
	font-weight: bold;
	text-decoration: none;
	font-size: 1.1rem;
}

nav a:hover{
	color: #efef15;
	text-decoration: underline;
	
}
/* ------------------------------ */

.banner{
	width: 100%;
	height: 100%;
	background: linear-gradient(rgba(0,0,0,0.5));
}

.principal{
	text-align: center;
	padding: 3em 0;
	/*background: #fefefe;*/
	width: 940px;
	margin: 0 auto;
}

.title-principal{
	text-align: center;
	font-size: 2em;
	margin: 1em 0 1em;
	font-weight: 400;
}

.principal p {
	margin: 0 0 1em;
}

.principal strong{
	font-weight: bold;
}

.principal em{
	font-style: italic;
}

.beneficios{
	text-align: center;
	clear: left;
	padding: 3em 0;
	background: #888888;
}

.conteudo-beneficios{
	width: 640px;
	margin: 0 auto;
}

.list-beneficios{
	width: 40%;
	display: inline-block;
	vertical-align: top;
	list-style: none;
	text-align: left;
}

.itens{
	line-height: 1.5;
}

.itens:nth-child(1){
	font-weight: bold;
}

.itens:before{
	content: "â˜…";
	margin-right: 10px;
}

.img-beneficios{
	width: 60%;
	opacity: 1;
	border-radius: 5px;
	box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
	transition: 1s opacity;
}

.img-beneficios:hover{
	opacity: 0.7;
}

.utensilios{
	width: 120px;
	float: left;
	margin: 0 20px 20px 0;
	border-radius: 5px;
	box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
}

.mapa{
	 padding: 3em 0;
	 background: linear-gradient(#fefefe, #888888);
}

.mapa p{
	margin: 0 0 2em;
	text-align: center;
}

.mapa-conteudo{
	width: 940px;
	margin: 0 auto;
}

.inc{
	border-radius: 5px;
	box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
}

.video{
	width: 560px;
	margin: 1em auto;
}


/* ------------------------------ */

footer {
	text-align: center;
	background: url("../img/bg.jpg");
	padding: 40px 0;
}

footer .copy{
	color: #fff;
	font-size: 13px;
}

@media screen and (max-width: 768px) {

	.principal,.beneficios, .conteudo-beneficios, .mapa-conteudo, .caixa{
		width: auto;
	}
	
	h1{
		text-align: center;
	}
	
	nav{
		position: static;
		text-align: center;
	}
	
	.lista-beneficios, .imagem-beneficios {
        width: 100%;
    }
}